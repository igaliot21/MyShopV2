@model MyShop.Core.Models.Order

@{
    ViewBag.Title = "Upate Order";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Order: @Model.Id</h4>
